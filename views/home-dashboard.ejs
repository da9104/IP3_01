      <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasEx" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
          <img src="images2/logo.png" alt="FLOC Logo" class="logo offcanvas-title rounded-circle gap-0 mx-0"
            id="offcanvasExampleLabel">
          <!-- <h5 class="offcanvas-title" id="offcanvasExampleLabel">National Museums Scotland</h5> -->
          <h6 class="fw-bold">
            FLOC
          </h6>
          <button id="settingsButton" type="button" class="btn-close" data-bs-dismiss="offcanvas"
            aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <div class="menu_bar_headings">
            <li><a href="/">Dashboard</a></li>
            <li><a href="/profile/<%= user.username %>">Profile</a></li>
            <li><a href="/calendar.html">Calandar</a></li>
            <li><a href="/community">Community</a></li>
            <li><a href="/attraction.html">Attractions</a></li>
            <!-- <li><a href="/settings.html">Settings</a></li> -->

            <div id="settings" class="dropdown mt-3">
              <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown"
                style="border: 0;">
                Accessibility Settings
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <li><a class="dropdown-item" href="#" onclick="showOverlay('red')">Red Overlay</a></li>
                <li><a class="dropdown-item" href="#" onclick="showOverlay('yellow')">Yellow Overlay</a></li>
                <li><a class="dropdown-item" href="#" onclick="showOverlay('blue')">Blue Overlay</a></li>
              </ul>
            </div>
            <button class="back-btn" onclick="hideOverlay()">Back</button>

            <script>
              function showOverlay(color) {
                var overlay4 = document.createElement('div');
                overlay4.classList.add('overlay4', color);
                document.body.appendChild(overlay4);
              }

              function hideOverlay() {
                if (overlay) {
                  document.body.removeChild(overlay);
                  overlay = null;
                }
              }

            </script>


          </div>
        </div>
