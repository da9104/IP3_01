        text-align: left;
      }

      #settingsButton {
        padding: 0;
        margin: 0;
      }

      .overlay4 {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        opacity: 0.5;
      }

      .red {
